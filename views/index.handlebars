<div class="success">{{success}}</div>
<header>
    <h2>{{greetText}} {{name}}</h2>
    <p>Choose the days you will work on</p>
</header>
<form action="/days" method="post" id="days">
    <div class="container">
        {{#each days}}
            <span>
                <input type="checkbox" id="{{day}}" name="days" value="{{day}}">
                <label for="{{day}}">{{day}}</label><br>
            </span>
        {{/each}}
    </div>
    <button type="submit" value="Submit">{{btnText}}</button>
</form>

